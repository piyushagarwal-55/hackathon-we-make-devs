{
  "name": "commerce-genui-tests",
  "version": "1.0.0",
  "description": "Test suite for TypeScript packages",
  "scripts": {
    "test:types": "tsc --noEmit -p ../packages/types/tsconfig.json",
    "test:react": "tsc --noEmit -p ../packages/react/tsconfig.json",
    "test:components": "tsc --noEmit -p ../packages/components/tsconfig.json",
    "test:all": "npm run test:types && npm run test:react && npm run test:components",
    "build:types": "cd ../packages/types && npm run build",
    "build:react": "cd ../packages/react && npm run build",
    "build:components": "cd ../packages/components && npm run build",
    "build:all": "npm run build:types && npm run build:react && npm run build:components"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "typescript": "^5.0.0"
  }
}
